<!DOCTYPE html>
<html lang="en">

<%- include('includes/head'); -%>

<body>
    <%- include('includes/header'); -%>

    <main>

        <section>
            <div class="container">
                <input id="search" class="search" type="text" placeholder="Zoek een land" />

                <div class="dropdown" id="filter">
                    Kies een regio
                    <ul>
                        <li>All</li>
                        <li>Africa</li>
                        <li>Americas</li>
                        <li>Asia</li>
                        <li>Europe</li>
                        <li>Oceania</li>
                    </ul>
                </div>
                <div class="dropdown" id="filter2">
                    Kies een taal
                    <ul>
                        <li>All</li>
                        <li>Albanian</li>
                        <li>Arabic</li>
                        <li>Armenian</li>
                        <li>Bulgarian</li>
                        <li>Catalan</li>
                        <li>Czech</li>
                        <li>Dutch</li>
                        <li>English</li>
                        <li>French</li>
                        <li>German</li>
                        <li>Japanese</li>
                        <li>Pashto</li>
                        <li>Portuguese</li>
                        <li>Spanish</li>
                        <li>Swedish</li>
                        <li>Vietnamese</li>
                    </ul>
                </div>
            </div>
        </section>

        <section>
            <div class="container countries" id="countries">

                <% countries.forEach((country) => { %>
                <div class="card">
                    <a href="/country/<%= country.alpha3Code %> ">
                        <img src=<%= country.flag %> alt="vlag">
                        
                        <div class="card-body">
                            <h2 class="country-name"><%= country.name %></h2>
                            <p><strong>Regio:</strong> <%= country.region %></p>
                            <p><strong>Populatie: </strong><%= country.population %></p>
                            <p><strong>Hoofdstad:</strong><%= country.capital %></p>
                            <p><strong>Taal:</strong><%= country.languages[0].name %></p>
                        </div>
                    </a>

                    <form action="/mijnlijst" method="post">
                            <input type="hidden" name="land" id="land" value="<%= country.name %>">
                            <input type="hidden" name="populatie" id="populatie" value="<%= country.population %>">
                            <input type="hidden" name="regio" id="regio" value="<%= country.region %>">
                            <input type="hidden" name="capital" id="capital" value="<%= country.capital %>">
                            <input type="hidden" name="language" id="language" value="<%= country.languages[0].name %>">
                        <input type="submit" value="Submit">
                    </form>
                </div>
                <% }) %>

            </div>
        </section>





    </main>
    <script src="/scripts/script.js"></script>
</body>

</html>