<!DOCTYPE html>
<html lang="en">

<%- include('includes/head'); -%>
<%- include('includes/header'); -%>

<link rel="stylesheet" href="/css/registreren.css">

<body>

    <main>
        <section>
            <!-- Titel van het website -->
            <h1>Reisplanner</h1>
            <img src="#" alt="">
        </section>
        <section>
            <h2>Registreren</h2>
            <form action="/registeren" method="post">

                <!-- Volledige naam invoeren -->
                <fieldset>
                    <label for="voornaam">Jouw naam</label>

                    <div class="volledige-naam">
                        <input type="text" name="naam" id="voornaam" placeholder="Voornaam">
                        <input type="text" naam="naam" id="achternaam" placeholder="Achternaam">
                    </div>
                </fieldset>

                <!--Gebruikersnaam invoeren -->
                <fieldset>
                    <label for="gebruikersnaam">Gebruikersnaam</label>
                    <input type="text" name="gebruikersnaam" id="gebruikersnaam" placeholder="Gebruikersnaam">
                </fieldset>

                <!-- Email invoeren -->
                <fieldset>
                    <label for="email">Email</label>
                    <input type="mail" name="email" id="email" placeholder="Email">
                </fieldset>
                <!-- Wachtwoord invoeren -->
                <fieldset>
                    <label for="wachtwoord">Wachtwoord</label>
                    <input type="password" name="wachtwoord" placeholder="Wachtwoord">
                </fieldset>

                           

                <fieldset>
                    <!-- Gaat naar het aanmeld formulier pagina om in te loggen -->
                    <a href="/aanmelden">Registreren</a>

                    <!-- Wordt geregistreerd -->
                    <button type="submit">Aanmelden</button>
                </fieldset>


            </form>
        </section>


    </main>

</body>

</html>